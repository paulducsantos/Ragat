<header>
  <div class="parallax-container">
    <div class="section center">
      <div class="container center">
        <h1 class="header center red-text text-darken-4 home-heading">RURated</h1>
        <div class="row center">
          <h3 class="header col s12 black-text home-subheading">Discover new places at Rutgers!</h3>
        </div>
        <div class="row center">
          <a id="place-button" class="btn-large waves-effect waves-light red darken-4 modal-trigger" href="#modal2">Add Place</a>
        </div>
      </div>
    </div>
    <div class="parallax"><img id="parallax-img" src="../../static/images/jumbotron-placeholder-img.jpg"></div>
  </div>
</header>

<!--Place Modal-->
<div id="modal2" class="modal">
  <div class="modal-content" id="place-modal">
    <h4>New Spot</h4>
    <div class="row">
      <form class="col s12" method="post" action="/addActivity">
        <div class="row">
          <div class="input-field col s6">
            <select name="activityType">
              <option value="" disabled selected>Type of Spot</option>
              <option value="food">Food</option>
              <option value="cafe">Cafe</option>
              <option value="dorm">Dorms</option>
              <option value="other">Other</option>
            </select>
            <label>Type of Spot</label>
          </div>
          <div class="input-field col s6">
            <input id="last_name" type="text" class="validate" name="name">
            <label for="last_name">Name of Spot</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s6">
            <select name="foodType">
              <option value="" disabled selected>Type of Food</option>
              <option value="american">American</option>
              <option value="japanese">Japanese</option>
              <option value="korean">Korean</option>
              <option value="italian">Italian</option>
              <option value="indian">Indian</option>
              <option value="chinese">Chinese</option>
              <option value="filipino">Filipino</option>
              <option value="dining hall">Dining Hall</option>
              <option value="mexican">Mexican</option>
              <option value="ethiopian">Ethiopian</option>
              <option value="grease truck">Grease Truck</option>
              <option value="middle-eastern">Middle Eastern</option>
            </select>
            <label>Type of Food</label>
          </div>
        </div>
        <a href="" class=" modal-action modal-close waves-effect waves-green btn-flat"><button class="btn waves-effect waves-light red darken-4 submit-btn" type="submit" name="action">Submit
          <i class="material-icons right">send</i>
        </button></a>
      </form>
    </div>
  </div>
  <div class="modal-footer">
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="section center">
      <h3 class="">What are you in the mood for?</h3>
    </div>
    <div class="section activity-block center">
      <a href class="activity-select">
        <div class="activities"><i class="fa fa-cutlery fa-5x"></i></div>
        <p class="center-align">Food</p>  
      </a>
      <a href class="activity-select">
        <div class="activities"><i class="fa fa-bed fa-5x"></i></div>
        <p class="center-align">Dorms</p>  
      </a>
      <a href class="activity-select">
        <div class="activities"><i class="fa fa-coffee fa-5x"></i></div>
        <p class="center-align">Cafe</p>  
      </a>
      <a href class="activity-select">
        <div class="activities"><i class="fa fa-futbol-o fa-5x"></i></div>
        <p class="center-align">Sports</p>  
      </a>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="section center section-heading-div">
      <h3 class="section-heading-text">Latest Buzz</h3>
      <div class="row">
        {{#each topBuzz}}     
        <div class="col m4">
          <div class="card red darken-4 card-div">
            <div class="card-content white-text">
              <span class="card-title">{{name}}</span>
              <p>{{rating}}</p>
            </div>
            <div class="card-action">
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="section center section-heading-div">
      <h3 class="section-heading-text">Top Spots</h3>
      <div class="row">
        {{#each topActivities}}
        <div class="col m4">
          <div class="card red darken-4 card-div">
            <div class="card-content white-text">
              <span class="card-title">{{name}}</span>
              <p>{{rating}}</p>
            </div>
            <div class="card-action">
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

